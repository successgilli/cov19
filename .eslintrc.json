{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "import/no-unresolved": "off"
    },
    "settings": {
        "import/resolver": {
          "alias": {
            "map": [
              ["Components", "./src/components/"],
              ["Containers", "./src/containers/"],
              ["Images", "./src/assets/img/"],
              ["Fonts", "./src/assets/font/"]
            ],
            "extensions": [".ts", ".js", ".jsx", ".json", ".svg", ".ttf"]
          }
        }
      }
}